<header class="page-header">
<h1>Admin &raquo; New category</h1>
</header>

<div class="well">
<%= link_to 'All Categories', [:admin, :categories], class: 'btn btn-info' %>
</div>   

  <%= form_for [:admin, @category] do |form| %>

    <% if form.object.errors.any? %>
          <div class="alert alert-danger">
            <strong>The following errors prevented saving:</strong>
            <ul>
              <% form.object.errors.full_messages.each do |error| %>
                <li><%= error %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
        
    <div class="form-group">
        <%= form.label :name %>
        <%= form.text_field :name, class: 'form-control' %>
    </div>
  <button type="Create new category" class="btn btn-primary" style="margin-top: 20px">Submit</button>
  <% end %>


